generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SpecialRuleType {
  CLOSED
  SPECIAL_HOURS
}

// --- USER & AUTH ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  password      String?
  role          String    @default("STAFF") // STAFF, OWNER, ADMIN

  accounts      Account[]
  sessions      Session[]
  memberships   Membership[]
  bookings      Booking[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- RESTAURANT DATA ---

model Location {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  description  String?

  turnoverTime Int      @default(90)

  tables       Table[]
  memberships  Membership[]
  bookings     Booking[]

  openingHours OpeningHour[]
  specialRules SpecialRule[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Membership {
  id         String   @id @default(cuid())
  role       String   @default("STAFF") // OWNER, MANAGER, STAFF

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, locationId])
}

model Table {
  id         String   @id @default(cuid())
  name       String
  capacity   Int

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  bookings   Booking[]
}

model Booking {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  date          DateTime
  time          String
  guests        Int
  status        String   @default("CONFIRMED")

  customerName  String
  customerEmail String?
  customerPhone String?
  notes         String?

  locationId    String
  location      Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  tableId       String?
  table         Table?   @relation(fields: [tableId], references: [id])

  userId        String?
  user          User?    @relation(fields: [userId], references: [id])
}

model OpeningHour {
  id        String  @id @default(cuid())
  dayOfWeek Int     // 0=Sunday ... 6=Saturday
  isClosed  Boolean @default(false)

  openTime  String? // "09:00" (nullable if closed)
  closeTime String? // "22:00" (nullable if closed)

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@unique([locationId, dayOfWeek])
}

model SpecialRule {
  id        String          @id @default(cuid())
  type      SpecialRuleType

  startDate DateTime        @db.Date
  endDate   DateTime        @db.Date

  openTime  String?
  closeTime String?

  note      String?

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}
