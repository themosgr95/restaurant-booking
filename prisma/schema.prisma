generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum MembershipRole {
  OWNER
  MANAGER
  STAFF
}

enum BookingSource {
  PUBLIC
  STAFF
  EMBED
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  NO_SHOW
}

model Restaurant {
  id            String         @id @default(cuid())
  name          String
  slug          String         @unique
  timezone      String         @default("UTC")
  status        String         @default("active")

  locations     Location[]
  tables        Table[]
  bookings      Booking[]
  customers     Customer[]
  memberships   Membership[]
  bookingPage   BookingPage?
  embedWidgets  EmbedWidget[]
  bookingConfig BookingConfig?

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?   // <--- ADDED: Required for Credentials Login
  name          String?

  accounts      Account[]
  sessions      Session[]
  memberships   Membership[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Membership {
  id           String         @id @default(cuid())
  restaurantId String
  userId       String
  role         MembershipRole

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([restaurantId, userId])
  @@index([restaurantId])
  @@index([userId])
}

model Location {
  id           String @id @default(cuid())
  restaurantId String
  name         String

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  openingHours    OpeningHour[]
  specialClosures SpecialClosure[]
  services        Service[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([restaurantId])
}

model Service {
  id              String @id @default(cuid())
  locationId      String
  name            String
  durationMinutes Int
  minPartySize    Int    @default(1)
  maxPartySize    Int
  leadTimeMinutes Int    @default(0)

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([locationId])
}

model OpeningHour {
  id         String  @id @default(cuid())
  locationId String
  dayOfWeek  Int
  opensAt    String
  closesAt   String
  serviceId  String?

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([locationId])
  @@index([serviceId])
}

model SpecialClosure {
  id         String   @id @default(cuid())
  locationId String
  date       DateTime
  isClosed   Boolean  @default(true)
  opensAt    String?
  closesAt   String?
  note       String?

  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([locationId])
  @@index([date])
}

model Table {
  id           String  @id @default(cuid())
  restaurantId String
  locationId   String?
  name         String
  capacityMin  Int
  capacityMax  Int
  isActive     Boolean @default(true)
  sortOrder    Int     @default(0)

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  bookingTables BookingTable[]
  locks         TableLock[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([restaurantId])
  @@index([locationId])
}

model Customer {
  id           String  @id @default(cuid())
  restaurantId String
  email        String?
  phone        String?
  name         String?

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  bookings   Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([restaurantId])
  @@index([email])
  @@index([phone])
}

model Booking {
  id           String  @id @default(cuid())
  restaurantId String
  locationId   String?
  serviceId    String?
  customerId   String?

  source BookingSource
  status BookingStatus @default(CONFIRMED)

  partySize Int
  startsAt  DateTime
  endsAt    DateTime

  notes                 String?
  createdByMembershipId String?

  depositAmountCents Int?
  paymentStatus      String?

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  customer   Customer?  @relation(fields: [customerId], references: [id], onDelete: SetNull)

  tables BookingTable[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([restaurantId, startsAt])
  @@index([startsAt])
  @@index([status])
}

model BookingTable {
  bookingId String
  tableId   String

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  table   Table   @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@id([bookingId, tableId])
  @@index([tableId])
}

model TableLock {
  id           String  @id @default(cuid())
  restaurantId String
  tableId      String?

  startsAt DateTime
  endsAt   DateTime

  lockKey   String @unique
  createdBy String

  expiresAt DateTime
  createdAt DateTime @default(now())

  table Table? @relation(fields: [tableId], references: [id], onDelete: SetNull)

  @@index([restaurantId, expiresAt])
  @@index([tableId, startsAt, endsAt])
}

model BookingPage {
  id           String  @id @default(cuid())
  restaurantId String  @unique
  isEnabled    Boolean @default(true)
  brandName    String?
  primaryColor String?

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmbedWidget {
  id             String  @id @default(cuid())
  restaurantId   String
  publicKey      String  @unique
  allowedOrigins String?
  theme          Json?

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([restaurantId])
}

model BookingConfig {
  id                    String  @id @default(cuid())
  restaurantId          String  @unique
  requiresStaffApproval Boolean @default(false)

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}