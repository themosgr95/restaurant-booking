generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // <--- Keep this exactly as "DATABASE_URL"
}

enum SpecialRuleType {
  CLOSED
  SPECIAL_HOURS
}

// --- USER & AUTH ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  password      String?   // Allows null for Google Logins
  role          String    @default("STAFF") // STAFF, OWNER, ADMIN

  accounts      Account[]
  sessions      Session[]
  memberships   Membership[]
  bookings      Booking[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- RESTAURANT DATA ---

model Location {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  description  String?

  // Turnover duration in minutes (used by booking wizard to lock tables)
  turnoverTime Int      @default(90)

  tables       Table[]
  memberships  Membership[]
  bookings     Booking[]
  openingHours OpeningHour[]

  // ✅ NEW: replaces SpecialClosure
  specialRules SpecialRule[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Membership {
  id         String   @id @default(cuid())
  role       String   @default("STAFF") // OWNER, MANAGER, STAFF

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, locationId])
}

model Table {
  id         String   @id @default(cuid())
  name       String
  capacity   Int

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  bookings   Booking[]
}

model Booking {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // --- Booking Info ---
  date          DateTime
  time          String    // e.g. "18:30"
  guests        Int
  status        String    @default("CONFIRMED") // PENDING, CONFIRMED, CANCELLED

  // --- Customer Info ---
  customerName  String
  customerEmail String?
  customerPhone String?
  notes         String?

  // --- Relations ---
  locationId    String
  location      Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)

  tableId       String?
  table         Table?    @relation(fields: [tableId], references: [id])

  userId        String?
  user          User?     @relation(fields: [userId], references: [id])
}

model OpeningHour {
  id        String   @id @default(cuid())
  dayOfWeek Int      // 0=Sunday, 1=Monday...
  isOpen    Boolean  @default(true)
  openTime  String   // "09:00"
  closeTime String   // "22:00"

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@unique([locationId, dayOfWeek])
}

// ✅ NEW MODEL (replaces SpecialClosure)
// Supports:
// - Closed date ranges (01-02 to 15-02)
// - Special hours date ranges (e.g. holiday hours)
model SpecialRule {
  id        String          @id @default(cuid())
  type      SpecialRuleType

  // Date range (supports a single day by having startDate = endDate)
  startDate DateTime        @db.Date
  endDate   DateTime        @db.Date

  // Only used when type = SPECIAL_HOURS
  openTime  String?
  closeTime String?

  note      String?

  locationId String
  location   Location       @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}
