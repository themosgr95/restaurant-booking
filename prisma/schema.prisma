// --- USER & AUTH ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("STAFF")

  accounts      Account[]
  sessions      Session[]
  memberships   Membership[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- RESTAURANT DATA ---

model Location {
  id              String           @id @default(cuid())
  name            String
  slug            String           @unique
  description     String?

  // ADD THIS LINE:
  turnoverTime    Int              @default(90) // Duration in minutes (default 1.5 hours)

  tables          Table[]
  memberships     Membership[]
  bookings        Booking[]
  openingHours    OpeningHour[]
  specialClosures SpecialClosure[]

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Membership {
  id         String   @id @default(cuid())
  role       String   @default("STAFF") // OWNER, MANAGER, STAFF

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, locationId])
}

model Table {
  id        String   @id @default(cuid())
  name      String
  capacity  Int
  locationId String
  location  Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  
  bookings  Booking[] // Relation to bookings
}

model Booking {
  id             String   @id @default(cuid())
  date           DateTime // The specific date and time of booking
  
  customerName   String
  customerEmail  String?
  customerPhone  String?
  guests         Int
  notes          String?
  status         String   @default("CONFIRMED") // CONFIRMED, CANCELLED, SEATED, COMPLETED

  tableId        String?
  table          Table?   @relation(fields: [tableId], references: [id])

  locationId     String
  location       Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model OpeningHour {
  id        String   @id @default(cuid())
  dayOfWeek Int      // 0=Sunday, 1=Monday...
  openTime  String   // "09:00"
  closeTime String   // "22:00"

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
}

model SpecialClosure {
  id        String   @id @default(cuid())
  date      DateTime @db.Date
  reason    String?

  locationId String
  location   Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
}